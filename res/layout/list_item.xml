<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >
    <ImageView 
        android:src="@drawable/dress"
        android:layout_height="120dp"
        android:layout_width="110dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/app_name"
        android:id="@+id/listviewPic"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/listviewPic"
        android:id="@+id/listviewTitle"
        android:layout_alignTop="@+id/listviewPic"
        android:layout_marginTop="15dp"
        android:textSize="8pt"
        android:layout_marginLeft="50dp"/>
    <ImageButton
        android:src="@drawable/follow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/app_name"
        android:layout_alignLeft="@+id/listviewTitle"
        android:layout_alignBottom="@+id/listviewPic"
        android:layout_marginTop="15dp"
        android:background="#00000000"/>


</RelativeLayout>